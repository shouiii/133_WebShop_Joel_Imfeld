<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>WebshopJoelImfeld</title>
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="./assets/style.css" />
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="nopadding col-12 col-sm-12 col-lg-12">
                <nav class="navbar navbar-exband-lg navbar-dark bg-dark">
                    <a href="/cart" role="button" class="btn btn-lg btn-danger"><%=Number.parseFloat(total).toFixed(2) %></a>
                </nav>
            </div>
        </div>
        <div class="row">
            <% for (p of products) { %>
            <div class="col-6 col-sm-6 col-lg-3">
                <a href="/product/<%=p.id%>">
                    <div class="productContainer">
                        <img src="./assets/images/<%=p.image%>.jpg" />
                        <p class="productTitle"><%= p.name %></p>
                    </div>
                </a>
            </div>
            <%} %>
        </div>
    </div>
</body>

</html>